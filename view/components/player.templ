package components

script Player(src string) {
  document.querySelector("#video").pause();
  if (Hls.isSupported()) {
    hls.loadSource(src);
    hls.attachMedia(document.querySelector("#video"));
  } else if (
    document
      .querySelector("#video")
      .canPlayType("application/vnd.apple.mpegurl")
  ) {
    document.querySelector("#video").src = src;
  }
}
